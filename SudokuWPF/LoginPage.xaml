<Page x:Class="SudokuWPF.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SudokuWPF"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LoginPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Логин:" VerticalAlignment="Bottom"/>
        <Label Content="Пароль:" VerticalAlignment="Bottom" Grid.Row="2"/>
        <Label Content="Еще не зарегистрированы?:" HorizontalAlignment="Center" Grid.Row="5" Margin="66,10,66,0"/>
        <TextBox VerticalContentAlignment="Center" Name="TextboxLogin" Grid.Row="1" Margin="10,0,10,24" />
        <PasswordBox VerticalContentAlignment="Center" Name="PasswordBox" Grid.Row="3" Margin="10,0,10,22"/>
        <Button Content="Зарегистрироваться" Grid.Row="6" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Sign_up_click" Height="35" Margin="66,10" Width="162"/>
        <Button Content="Войти" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center" Click="log_in_click"  Width="162" Height="34" Margin="66,10"/>
        </Grid>
</Page>
